<div id="stock_index">
  <div class="stock_set">
    <% @stocks.each do |s| %>
    <div class='stock'>
      <h2 class="title"><%= link_to s.post.title, post_path(s.post.id) %></h2>
      <div class="main">
        <p class="body"><%= s.post.body %></p>
      </div>
      <div class="meta">
        <span class="user_name"><%= link_to s.post.user.name, user_path(s.post.user.name) %></span>
      </div>
      <div class="menu">
        <% if s.editable_by?(s.post_id, current_user.id) %>
        <li><%= link_to "Delete", user_stock_path(:id => s.id), :confirm => "Do you really want to delete this comment?", :method => :delete %></li>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>

  <div id="account_ctrl_panel">
  </div>
</div>
